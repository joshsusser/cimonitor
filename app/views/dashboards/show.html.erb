<%= content_for(:head) do %>
<% end %>

<% unless @messages.empty? %>
    <div id="messages_right" style="width:20%">
      <%= render :partial => 'messages' %>
    </div>
<% end %>


<div class="projects_wrapper">
  <div class="project_map">
    <ul>
      <% @projects.each do |p| %>
        <li class="<%= p.green? ? 'green' : (p.red? ? 'red' : 'blue') -%>">
          <div class="project_dots"><%#= render :partial => 'dashboards/history', :locals => {:project => p} %></div>
          <div class="project_title"><span><%= p.name %></span></div>
        </li>
      <% end %>
    </ul>
  </div>
  <div class="projects">
    <ul>
      <% @red_projects.each do |project| %>
        <li class="<%= project.red? ? 'red' : 'blue' %>"><%= project.name %></li>
      <% end %>
    </ul>
  </div>
</div>